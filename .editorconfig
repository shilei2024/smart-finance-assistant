# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
max_line_length = 0

[*.{json,json5}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.sql]
indent_size = 4

[Makefile]
indent_style = tab

[*.{ts,tsx,js,jsx}]
indent_size = 2

[*.{css,scss,less}]
indent_size = 2

[*.html]
indent_size = 2

[*.java]
indent_size = 4

[*.py]
indent_size = 4

[*.go]
indent_size = 4
tab_width = 4

[*.rs]
indent_size = 4
tab_width = 4
