# 开发环境Dockerfile
FROM node:18-alpine AS development

# 设置工作目录
WORKDIR /app

# 复制package.json文件
COPY package*.json ./
COPY pnpm-lock.yaml ./

# 安装pnpm
RUN npm install -g pnpm@8

# 安装依赖
RUN pnpm install --frozen-lockfile

# 复制源代码
COPY . .

# 暴露端口
EXPOSE 5173

# 启动命令
CMD ["pnpm", "run", "dev", "--host"]
